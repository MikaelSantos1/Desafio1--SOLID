{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas",
        "description": "Essa e uma documentação da Atlas api",
        "version": "1.0.0",
        "contact": {
            "email": "mikaelsantos120@outlook.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags":["Users"],
                "summary": "Gerenciamento de usuarios",
                "description": "Cria um novo usuario",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name":"Nome de usuario",
                                    "email":"email"
                                }
                            }
                           
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "400":{
                        "description":"User already exists"
                    }
                }
            },
            "get":{
                "tags":["Users"],
                "summary": "Retorna todos usuarios",
                "description": "Somente usuario admin pode acessar",
                "parameters":[{
                    "in":"header",
                    "name":"user_id",
                    "required":true,
                    "type": "string",
                        "format": "uuid"
                }
            ],
                "responses":{
                    "200":{
                        "description":"Success"
                    },
                    "400":{
                        "description":"User is not a administrator "
                    }
                }
            }  
        },
        "/users/{user_id}":{
            "get":{
                "tags":["Users"],
                "summary": "Retorna um usuario especefico ",
                "description": "Somente usuario admin pode acessar",
                "parameters":[{
                    "in":"header",
                    "name":"user_id",
                    "required":true,
                    "type": "string",
                        "format": "uuid"
                }
            ],
                "responses":{
                    "200":{
                        "description":"Success"
                    },
                    "400":{
                        "description":"User is not a administrator "
                    }
                }
            }
        },
        "/users/{user_id}/admin":{
            "patch":{
                "tags":["Users"],
                "summary": "Retorna um usuario especefico ",
                "description": "Somente usuario admin pode acessar",
                "parameters":[{
                    "in":"header",
                    "name":"user_id",
                    "required":true,
                    "type": "string",
                        "format": "uuid"
                }
            ],
                "responses":{
                    "200":{
                        "description":"Success"
                    },
                    "400":{
                        "description":"Usuario nao existe "
                    }
                }
            }
        }
    }
}